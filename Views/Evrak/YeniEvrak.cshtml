@model EvrakYonetimSistemi.Models.Evrak

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>jQuery UI Datepicker - Default functionality</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
</head>
<body>
    <br />
    <form class="form-group" enctype="multipart/form-data" method="post">


        <br />
        <b>AD</b>
        @Html.TextBoxFor(x => x.Adi, new { @class = "form-control" })
        <br />

        <b>TARİH</b>
        
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" ,@id= "datepicker" })
        <br />
        <b>KONU</b>
        @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
        <br />
        <b>EVRAK TİPİ</b>
        @Html.DropDownListFor(x => x.EvrakTipi.TipID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        <br />

        <input asp-for="Dosya"  class="btn btn-default" />
        <br />
        <br />


        <input type="submit" value="Yeni Evrak" class="btn btn-success " style="background-color: black" />
    </form>
</body>
</html>